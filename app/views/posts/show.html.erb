<% content_for :title, "Note Details" %>

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-100 mb-5 text-green-700 font-semibold rounded-md text-center" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-3xl mb-6 text-gray-800">Note Details</h1>

  <%= render @post %>

  <div class="flex flex-col sm:flex-row gap-3 mt-8">
    <%= link_to "Edit", edit_post_path(@post), data: {
      turbo_frame: "modal"
    }, class: "flex-1 text-center rounded-md px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 font-semibold" %>
    <%= link_to "Back", posts_path, class: "flex-1 text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold" %>
    <%= button_to "Delete", @post, method: :delete, form_class: "flex-1", class: "w-full rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 font-semibold", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
