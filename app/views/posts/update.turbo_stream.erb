<%# app/views/posts/update.turbo_stream.erb %>

<%# 1. Replace the post on the page %>
<%= turbo_stream.replace @post do %>
  <%= render "post", post: @post %>
<% end %>

<%# 2. Add a success flash message %>
<%= turbo_stream.prepend "flash" do %>
  <%= render "shared/flash", notice: "Post was successfully updated." %>
<% end %>
<%= turbo_stream.replace "modal_container", partial: "shared/modal" %>