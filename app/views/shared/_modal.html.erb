<%# The main container. We add opacity-0 and transition classes for the fade effect. %>
<div class="hidden opacity-0 transition-opacity ease-in-out duration-300" data-modal-target="modal">

  <%# The dark background overlay %>
  <div data-action="click->modal#close" class="fixed inset-0 bg-opacity-75 z-40"></div>

  <%# The dialog container %>
  <div class="fixed inset-0 flex items-center justify-center z-50 p-4">
    <%#
      The dialog box itself.
      We add classes for the scale and fade animation.
    %>
    <div class="bg-white rounded-lg shadow-xl w-full max-w-lg relative transition-all ease-in-out duration-300 transform scale-95" data-modal-target="dialog">

      <%# A styled close button in the top-right corner. It calls the close() action. %>
      <button data-action="click->modal#close" class="absolute top-3 right-3 text-gray-400 hover:text-gray-700 p-1 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <%# The turbo frame for the content remains the same %>
      <div class="p-6">
        <%= turbo_frame_tag "modal" %>
      </div>

    </div>
  </div>
</div>